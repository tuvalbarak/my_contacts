<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.tuval.barak.mycontacts">
<!--note: changed allowBackup to false, because it saved the old db schemas on my phone even though I uninstalled the app-->

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_baseline_person_outline_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_person_outline_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.mvvmapp">

        <activity android:name="com.tuval.barak.mycontacts.ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
<!-- windowSoftInputMode -> let views move if the keyboard is open (buttons on EditOrCreateContactFragment) -->
        <activity android:name="com.tuval.barak.mycontacts.ui.MainActivity"
            android:windowSoftInputMode="adjustResize" />


    </application>

</manifest>